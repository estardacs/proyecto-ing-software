<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-two-thirds"> 
        <figure class="image" style="margin-top: 10%;">
          <%= image_tag(asset_path('dino_login.gif'), alt: "Descripci칩n de la imagen", style: "width: 100%; height: auto; border: 1px solid black") %>
        </figure>
      </div>
      
      <div class="column is-one-third"> 
        <div style="margin-top: 150px;"> 
          <h2 class="title has-text-primary is-size-1 has-text-centered">Iniciar Sesi칩n</h2>
          <div style="margin-top: 40px;"> 
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :email, "Correo", class: "label" %>
                <div class="control">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
                </div>
              </div>

              <div class="field">
                <%= f.label :password, "Contrase침a", class: "label" %>
                <div class="control">
                  <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
                </div>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <div class="control">
                    <%= f.label :remember_me, class: "checkbox" do %>
                      <%= f.check_box :remember_me %>
                      Recordar Usuario
                    <% end %>
                  </div>
                </div>
              <% end %>

              <div class="field">
                <div class="control">
                  <%= f.submit "Iniciar Sesi칩n", class: "button is-primary is-fullwidth" %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="has-text-centered mt-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>